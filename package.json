{
  "name": "@aesop-fables/containr-react",
  "version": "0.4.1",
  "description": "A set of providers/hooks that make it easy to leverage `@aesop-fables/containr` in any react (or react-native) app",
  "type": "commonjs",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "rimraf ./lib && tsc --p ./tsconfig.build.json",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "jest --config jest.config.js",
    "test:ci": "jest --config jest.config.js --ci",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@aesop-fables/containr": "^0.5.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.11",
    "@types/react": "^18.0.26",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "5.62.0",
    "esbuild": "^0.17.19",
    "eslint": "8.48.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "28.2.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "^29.3.1",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.1",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "29.1.0",
    "typescript": "4.9.5"
  },
  "files": [
    "lib/**/*"
  ],
  "peerDependencies": {
    "@aesop-fables/containr": ">= 0.4.x",
    "react": ">= 17.x",
    "reflect-metadata": "0.x"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  }
}
