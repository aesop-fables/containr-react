{
  "name": "@aesop-fables/containr-react",
  "version": "0.3.0",
  "description": "A set of providers/hooks that make it easy to leverage `@aesop-fables/containr` in any react (or react-native) app",
  "type": "commonjs",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "rimraf ./lib && tsc --p ./tsconfig.build.json",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "jest --config jest.config.js",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@aesop-fables/containr": "^0.2.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.11",
    "@types/react": "^18.0.26",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "5.55.0",
    "esbuild": "^0.16.2",
    "eslint": "8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "27.1.6",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "29.0.5",
    "typescript": "4.9.3"
  },
  "files": [
    "lib/**/*"
  ],
  "peerDependencies": {
    "@aesop-fables/containr": "0.2.x",
    "jest-mock-extended": "3.x",
    "react": ">= 17.x",
    "reflect-metadata": "0.x"
  }
}
